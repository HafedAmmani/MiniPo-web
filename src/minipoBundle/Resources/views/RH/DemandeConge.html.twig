{% extends 'baseRH.html.twig' %}
{% block title %}Demande Conge{% endblock %}
{% block add_style %}
    <link href="{{ asset('assets/plugins/bootstrap-select/bootstrap-select.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('assets/plugins/footable/css/footable.core.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/bootstrap-select/bootstrap-select.min.css') }}" rel="stylesheet" />
{% endblock %}
{% block content %}
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Les demandes de cong√©</h3>
        </div>

        <div>
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>
    </div>
    <div class="row m-t-40">
    <div class="col-md-6 col-lg-3 col-xlg-3">
        <div class="card card-inverse card-info">
            <div class="box bg-info text-center">
                <h1 class="font-light text-white">{{ Conge|length }}</h1>
                <h6 class="text-white">Total demandes</h6>
            </div>
        </div>
    </div>
        <div class="col-md-6 col-lg-3 col-xlg-3">
            <div class="card card-success card-inverse">
                <div class="box text-center">
                    <h1 class="font-light text-white">{{ listCongeAccepter|length }}</h1>
                    <h6 class="text-white">Demande accepter</h6>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 col-xlg-3">
            <div class="card card-inverse card-danger">
                <div class="box text-center">
                    <h1 class="font-light text-white">{{ listconge|length }}</h1>
                    <h6 class="text-white">En Attente</h6>
                </div>
            </div>
        </div>

    </div>
    <div class="card-body">
        <h2>Les demandes des conges pour les employes</h2>
        <hr>
        <label class="form-inline">Afficher &nbsp;
            <select id="demo-show-entries">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
            </select> &nbsp; rows </label>
        <table id="demo-foo-pagination" class="table m-b-0 toggle-arrow-tiny" data-page-size="5">
            <thead>
            <tr>
                <th>Username</th>
                <th>Type de conge</th>
                <th>Date de debut</th>
                <th>Date de fin</th>
                <th>nombre de jours</th>
                <th>Description</th>
                <th>Action</th>

            </tr>
            </thead>
            <tbody>
            {% for elt in listconge %}
                <tr>

                    <td>{{ elt.id }}</td>
                    <td>{{ elt.type }}</td>
                    <td>{{ elt.datedebut }}</td>
                    <td>{{ elt.datefin }}</td>
                    <td>{{ elt.nbrjrs }}</td>
                    <td>{{ elt.description }}</td>
                    <td><a href="{{ path('minipo_AccepterConge',
                            {'id':elt.idcon}) }}" ><button type="button" class="btn btn-success"><i class="fa fa-check"></i> Accepter</button></a></td>
                </tr>

            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5">
                    <div class="text-right">
                        <ul class="pagination pagination-split m-t-30"> </ul>
                    </div>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
{% block add_script %}
    <script src="{{asset('assets/plugins/bootstrap-select/bootstrap-select.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('assets/plugins/footable/js/footable.all.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/bootstrap-select/bootstrap-select.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/footable-init.js') }}"></script>
{% endblock %}
{% extends 'baseEmp.html.twig' %}
{% block title %}Liste Conge{% endblock %}

{% block new_style %}
    <link href="{{ asset('assets/plugins/footable/css/footable.core.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/bootstrap-select/bootstrap-select.min.css') }}" rel="stylesheet" />
{% endblock %}
{% block content %}
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Liste Conge</h3>
        </div>

        <div>
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Votre demandes</h4>
            <h6 class="card-subtitle">suivie votre demande envoyer</h6>
            <table id="demo-foo-row-toggler" class="table toggle-circle table-hover">
                <thead>
                <tr>
                    <th data-toggle="true"> Type </th>
                    <th data-toggle="true"> Date de debut </th>
                    <th data-toggle="true"> Date de fin </th>
                    <th data-hide="all"> Nombre de jours </th>
                    <th data-hide="all"> Description </th>
                    <th data-hide="all"> Status </th>
                </tr>
                </thead>
                <tbody>
                {% for elt in listConge %}
                    <tr>
                        <td>{{ elt.type }}</td>
                        <td>{{ elt.datedebut }}</td>
                        <td>{{ elt.datefin }}</td>
                        <td>{{ elt.nbrjrs }}</td>
                        <td>{{ elt.description }}</td>
                        {% if  elt.etat  == 1 %}
                        <td><span class="label label-table label-success">Accepter</span></td>
                        {% endif %}
                        {% if  elt.etat  == 0 %}
                            <td><span class="label label-table label-warning">En Cours</span></td>
                        {% endif %}
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
{% block add_script %}
    <script src="{{ asset('assets/plugins/footable/js/footable.all.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/bootstrap-select/bootstrap-select.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/footable-init.js') }}"></script>
{% endblock %}

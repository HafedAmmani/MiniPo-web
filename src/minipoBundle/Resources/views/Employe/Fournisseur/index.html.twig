{% extends 'baseEmp.html.twig' %}
{% block title %}{{ msg }} {% endblock %}
{% block content %}


    <!-- Stylesheets
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css"> -->
    <script src="https://kit.fontawesome.com/e076ed4514.js" crossorigin="anonymous"></script>





    <!-- Mainpage -->
    <h1 class="text-center">Liste des Fournisseur</h1>
    <table width="60%" align="center" class="table table-hover table-bordered" style="border: 2px; color: black">

        <thead>
            <tr align="left">
                <th>ID</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for f in fournisseurs %}
                <tr>
                    <td>{{ f.idf }}</td>
                    <td>{{ f.nom }}</td>
                    <td>{{ f.prenom}}</td>
                    <td>{{ f.email }}</td>
                    <td>{{ f.telephone }}</td>
                    <td>{{ f.adresse }}</td>
                    <!-- data-toggle="modal" data-target="#myModal" id="interaction" -->
                    <td><button data-toggle="modal" data-target="#myModal" id="interaction" type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button></td>
                    <!-- this delete works
                    <td><a id="primaryButton" href="{{ path('fournisseur_supprimer', {'id': f.idf}) }}">Supprimer</a></td>
                    -->
                    <td><button type="button" class="btn btn-warning"><a href="{{ path('fournisseur_modifier', {'id': f.idf}) }}"><i class="fas fa-pen-nib" style="color:white"></i></a></button></td>
                    <!-- Modal -->
                    <div class="modal fade" data-backdrop="static" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Attention</h4>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this ?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>

                                    <button type="button" class="btn btn-danger"><a style="color: white" href="{{ path('fournisseur_supprimer', {'id': f.idf}) }}">Yes</a></button>

                                </div>
                            </div>

                        </div>
                    </div>
                </tr>
            {% endfor %}

        </tbody>
    </table>
    <a class="btn btn-success" href="{{path('fournisseur_ajout')}}">Ajouter un Fournisseur</a>

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(fournisseurs) }}
    </div>




{% endblock %}

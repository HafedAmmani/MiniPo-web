<h1 style="position:absolute;top:200px;margin-left:360px;">Facture</h1><br><br><br><br><br>
<br/><br/>
<div style="position:absolute;top:40px;right:0;width:30%;">
    <div style="color:#555;float:left;width:105px;text-align:right;">De:</div>
    <div style="margin-left: 115px;border-left: 1px solid #cccccc;padding-left: 10px;">
        <strong>Minipo Groupe</strong>
        <p>Site: www.Minipo.tn</p>
        <p>le: {{ d|date('d/m/yy') }}</p>

    </div>
</div>



<section class="cart-page section-padding">
    <div class="container">

        <div class="col-xs-12">
            <div class="single-check p-bottom50 clearfix" style="top:300px;">
                <div class="check-title">
                    <br/><br/><br/><br/><br/>
                    <strong><LABEL>Facture Réference: {{ f.idfact }} </LABEL></strong><br/><br/>
                    <LABEL>date d'emission: {{ f.datef|date('d/m/yy') }}</LABEL><br/><br/>
                    <LABEL>Etat Facture: {{ f.etatf }}</LABEL><br/><br/>
                    <LABEL>client: {{ lc[0].idcmd.id.firstname~" "~lc[0].idcmd.id.lastname }}</LABEL><br/><br/>
                    <label>Contact: {{ lc[0].idcmd.id.tel }}</label><br/><br/><br/>
                </div>

                <div class="table-responsive table-two">
                    <table class="order-table text-center">
                        <thead>
                        <tr>
                            <th>Product</th>
                            <th>Prix Unitaire</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for elt in lc %}
                        <tr>
                            <td class="td-text" >
                                <p style="margin-left:200px;">{{ elt.idprod.designation }}</p>

                            </td>
                            <td><p style="margin-left:60px;width:20px;">{{ elt.idprod.prix }}</p></td>
                            <td><p style="margin-left:45px;width:20px;">{{ elt.qte }}</p></td>
                            <td><p style="margin-left:25px;width:20px;">{{ elt.subtotal }}</p></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="single-check p-bottom50">
                <div class="check-title">
                    <h3>Facture Total:</h3>
                </div>
                <div class="subtotal clearfix">
                    <p>Total <strong class="floatright"><span>{{ lc[0].idcmd.total }}</span></strong></p>
                </div>
                <br/><br/><br/>
            </div>
        </div>
    </div>



</section>
